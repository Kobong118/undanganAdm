<div class="container mx-auto my-1 p-6">
                        <div x-data="{
        activeIndex: 0,
        items: ['/images/banner/tour-adm.png'],
        interval: null,
        startCarousel() {
            this.interval = setInterval(() => {
                this.activeIndex = (this.activeIndex + 1) % this.items.length;
            }, 3000);
        },
        stopCarousel() {
            clearInterval(this.interval);
        }
    }" x-intersect:enter="startCarousel()" x-intersect:leave="stopCarousel()"
                            class="relative w-full max-w-4xl mx-auto overflow-hidden">

                            <!-- Carousel Images -->
                            <div class="flex transition-transform duration-1000 ease-in-out"
                                :style="'transform: translateX(-' + (activeIndex * 100) + '%)'">
                                <template x-for="(image, index) in items" :key="index">
                                    <div class="min-w-full h-96 bg-1-1 bg-center bg-no-repeat"
                                        :style="'background-image: url(' + image + ')'">
                                    </div>
                                </template>
                            </div>

                            <!-- Previous and Next Buttons -->
                            <button
                                @click="activeIndex = (activeIndex - 1 + items.length) % items.length;console.log('aya')"
                                class="absolute top-1/2 left-0 transform -translate-y-1/2 bg-gray-800 text-white p-2 rounded-full">
                                &#10094;
                            </button>
                            <button @click="activeIndex = (activeIndex + 1) % items.length"
                                class="absolute top-1/2 right-0 transform -translate-y-1/2 bg-gray-800 text-white p-2 rounded-full">
                                &#10095;
                            </button>

                            <!-- Indicators -->
                            <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 flex space-x-2">
                                <template x-for="(image, index) in items" :key="index">
                                    <button @click="activeIndex = index"
                                        :class="activeIndex === index ? 'bg-white' : 'bg-gray-500'"
                                        class="w-3 h-3 rounded-full"></button>
                                </template>
                            </div>
                        </div>
                    </div>