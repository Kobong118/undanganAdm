<div x-data="{sc:'', scroll:false,music: new Audio('/mp3/Senandung Jasa Guru.mp3'),akhir:false,
init() {
        this.music.addEventListener('ended', () => {
            this.music.currentTime = 0; // Reset waktu ke awal
            this.music.play(); // Memutar ulang musik
        });
    }
}" x-bind:class="scroll? 'overflow-auto':'overflow-hidden'" class="h-screen">
    <!-- cover -->
    <div x-data="{terlihat:false,buka:false}" x-bind:class="{'invisible':buka}"
        :class="buka?'transition-all delay-150 duration-500 ease-linear h-0':'h-screen p-1'"
        class="relative w-screen overflow-hidden bg-haul-background">
        <!-- dekorasi -->
        <div x-bind:class="{'animate-[haul-awan_10s_linear_infinite]':terlihat}"
            class="w-[2000px] h-full absolute top-0 bottom-0 left-0 right-0 bg-d-awan-top bg-5-1 bg-repeat-x">
        </div>
        <div x-bind:class="{'animate-[haul-awan-r_10s_linear_infinite]':terlihat}"
            class="w-[2000px] h-full absolute top-0 bottom-0 left-0 right-0 bg-d-awan-bottom bg-5-1 bg-repeat-x">
        </div>
        <div x-bind:class="{'animate-slide-top-to-bottom':terlihat}"
            class="w-full h-full absolute top-0 bottom-0 left-0 right-0 bg-d-top-left-lam bg-top bg-1-1 bg-no-repeat">
        </div>
        <div x-bind:class="{'animate-slide-top-to-bottom':terlihat}"
            class="w-full h-full absolute top-0 bottom-0 left-0 right-0 bg-d-top-right-lam bg-top bg-1-1 bg-no-repeat">
        </div>
        <div x-bind:class="{'animate-haul-bintang':terlihat}"
            class="w-full h-full absolute top-0 bottom-0 left-0 right-0 bg-start bg-top bg-1-1 bg-no-repeat"></div>
        <div x-bind:class="{'animate-slide-top-to-bottom':terlihat}"
            class="w-full h-full absolute top-0 bottom-0 left-0 right-0 bg-d-top bg-top bg-1-1 bg-no-repeat"></div>
        <div x-bind:class="{'animate-slide-bottom-to-top':terlihat}"
            class="w-full h-full absolute top-0 bottom-0 left-0 right-0 bg-d-bottom bg-top bg-1-1 bg-no-repeat"></div>
        <div class="w-full h-full absolute top-0 bottom-0 left-0 right-0">
            <div x-intersect:enter="terlihat = true" x-intersect:leave="terlihat = false" class="flex h-16 w-full">
                <div class="w-1/5"></div>
                <div class="w-1/5">
                    <img x-show="terlihat" x-bind:class="{'animate-scaleRot-l':terlihat}"
                        class="aspect-square object-cover" src="../images/haulapalimbangan2025/d-kotak.png" alt="">
                </div>
                <div class="w-1/5"></div>
                <div class="w-1/5">
                    <img x-show="terlihat" x-bind:class="{'animate-scaleRot-r':terlihat}"
                        class="aspect-square object-cover" src="../images/haulapalimbangan2025/d-kotak.png" alt="">
                </div>
                <div class="w-1/5"></div>
            </div>
            <div class="flex h-32 w-full">
                <div class="w-1/4">
                    <img x-show="terlihat" x-bind:class="{'animate-scaleRot-l':terlihat}"
                        class="aspect-square object-cover" src="../images/haulapalimbangan2025/d-kotak.png" alt="">
                </div>
                <div class="w-1/4"></div>
                <div class="w-1/4"></div>
                <div class="w-1/4">
                    <img x-show="terlihat" x-bind:class="{'animate-scaleRot-r':terlihat}"
                        class="aspect-square object-cover" src="../images/haulapalimbangan2025/d-kotak.png" alt="">
                </div>
            </div>
        </div>
        <!-- text -->
        <div x-bind:class="{'animate-bintang-show':terlihat}"
            class="absolute top-0 bottom-0 left-0 right-0 flex flex-col justify-around items-center">
            <div class="w-1/2 text-center">
                <h1 class="text-3xl font-sofia drop-shadow-2xl text-haul-text-header">Serat Uleman<span
                        class="font-kufi block">وسيلة الهدى</span><span class="block text-sm font-sofia">Haol Apa Encep
                        II (KH.M.Iskandar) anu ka-4 & Silaturahmi Alumni</span><span
                        class="block text-sm font-sofia">Bojong Soreang & Balong Limbangan</span></h1>
            </div>
            <div class="w-full text-center relative">
                <div class="absolute bottom-0 w-full text-haul-text">
                    <h5 class="text-base font-sofia drop-shadow-2xl">Kahatur: <span class="font-zilla block">
                            <%= nama.toUpperCase() %>
                        </span></h5>
                    <div @click="() => {scroll = !scroll;
                        buka = !buka;
                        music.play().catch(error => {
                               console.log('Audio play failed:', error);
                           });
                   }" :class="scroll? 'invisible':'visible'" class="font-sofia my-4  animate-bounce">
                        <a href="#" class="px-1 py-1 rounded border-haul-text border text-xs"><span><svg
                                    xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-envelope-open inline mx-1 my-1" viewBox="0 0 16 16">
                                    <path
                                        d="M8.47 1.318a1 1 0 0 0-.94 0l-6 3.2A1 1 0 0 0 1 5.4v.817l5.75 3.45L8 8.917l1.25.75L15 6.217V5.4a1 1 0 0 0-.53-.882zM15 7.383l-4.778 2.867L15 13.117zm-.035 6.88L8 10.082l-6.965 4.18A1 1 0 0 0 2 15h12a1 1 0 0 0 .965-.738ZM1 13.116l4.778-2.867L1 7.383v5.734ZM7.059.435a2 2 0 0 1 1.882 0l6 3.2A2 2 0 0 1 16 5.4V14a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V5.4a2 2 0 0 1 1.059-1.765z" />
                                </svg></span>
                            Buka Serat Uleman</a>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
