<script>
  document.addEventListener('alpine:init', () => {
    // COVER CONTROL
    Alpine.data('cover', () => ({
      opened: false,
      music: null,

      init() {
        // ðŸ”’ Kunci scroll
        document.body.style.overflow = 'hidden';
        this.music = new Audio('/mp3/nabi.mp3');
      },

      openInvitation() {
        this.opened = true;
        try { this.music.play(); } catch (err) { console.warn('Gagal memutar audio:', err); }

        // ðŸ§­ Aktifkan scroll + tampilkan slide1
        setTimeout(() => {
          document.body.style.overflow = 'auto';
          const slide1 = document.getElementById('slide1');
          const slide2 = document.getElementById('slide2');
          const slide3 = document.getElementById('slide3');
          const slide4 = document.getElementById('slide4');
          if (slide1) {
            slide1.classList.remove('opacity-0');
            slide1.classList.add('opacity-100');
            slide1.scrollIntoView({ behavior: 'smooth' });
          }
          if (slide2) {
            slide2.classList.remove('opacity-0');
            slide2.classList.add('opacity-100');
            setTimeout(() => {
              slide2.scrollIntoView({ behavior: 'smooth' });
            }, 10000); // Geser ke slide2 setelah 10 detik
          }
          if (slide3) {
            slide3.classList.remove('opacity-0');
            slide3.classList.add('opacity-100');
            setTimeout(() => {
              slide3.scrollIntoView({ behavior: 'smooth' });
            }, 20000); // Geser ke slide3 setelah 20 detik
          } // Akhir slide3
          if (slide4) {
            slide4.classList.remove('opacity-0');
            slide4.classList.add('opacity-100');
            setTimeout(() => {
              slide4.scrollIntoView({ behavior: 'smooth' });
            }, 30000); // Geser ke slide4 setelah 30 detik
          } // Akhir slide4 
        }, 800);
      }
    }));

    // COUNTDOWN
    Alpine.data('countdown', () => ({
      target: new Date('2025-10-19T07:00:00').getTime(),
      values: { Hari: '00', Jam: '00', Menit: '00', Detik: '00' },
      animating: { Hari: false, Jam: false, Menit: false, Detik: false },

      init() {
        this.update();
        setInterval(() => this.update(), 1000);
      },

      update() {
        const now = new Date().getTime();
        const diff = this.target - now;
        if (diff <= 0) return;

        const d = Math.floor(diff / (1000 * 60 * 60 * 24));
        const h = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const m = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
        const s = Math.floor((diff % (1000 * 60)) / 1000);

        const newValues = {
          Hari: String(d).padStart(2, '0'),
          Jam: String(h).padStart(2, '0'),
          Menit: String(m).padStart(2, '0'),
          Detik: String(s).padStart(2, '0')
        };

        for (const key in newValues) {
          if (this.values[key] !== newValues[key]) {
            this.animating[key] = true;
            this.values[key] = newValues[key];
          }
        }
      },

      getValue(label) {
        return this.values[label];
      }
    }));
  });
</script>
