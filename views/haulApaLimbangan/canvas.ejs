    <div class="relative w-screen h-screen overflow-hidden p-1 bg-haul-background">
        <!-- decorasi -->
        <div class="w-[2000px] h-full absolute top-0 bottom-0 left-0 right-0 bg-d-awan-top bg-5-1 bg-repeat-x">
